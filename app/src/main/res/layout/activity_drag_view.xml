<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:cc="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <wenba.com.androidtest.view.DragView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/bg_drag_view"
        android:text="DragView"/>

    <wenba.com.androidtest.view.ScrollerView
        android:id="@+id/ScrollerView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="ScrollerView"/>

    <Button
        android:id="@+id/bt_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="animationStart"
        android:text="动画实现"/>

    <wenba.com.androidtest.view.CircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        cc:circle_color="@color/colorAccent"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"/>
</RelativeLayout>