<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorInit">

        <Button
            android:id="@+id/animator_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="startAnimator"
            android:text="animator_switcher"/>

        <Button
            android:id="@+id/animator_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animator_switcher"
            android:layout_centerInParent="true"
            android:onClick="startExpand"
            android:text="animator_expand"/>
    </RelativeLayout>
</LinearLayout>